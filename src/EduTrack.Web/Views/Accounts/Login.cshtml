@using EduTrack.Web.Models.Accounts
@model LoginModel

@{
    ViewData["Title"] = "Account";
}
<header>
    <style>
        #intro {
            height: 10vh;
        }

        .navbar .nav-link {
            color: #fff !important;
        }
    </style>

    <div id="intro">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-5 col-md-8">

                        <form method="post"
                              asp-action="Login"
                              asp-controller="Accounts"
                              class="bg-white mb-3  rounded-5 shadow-5-strong p-5">

                            <div class="form-outline mb-4">
                                <input type="tel" asp-for="Login" required class="form-control phone-number" />
                                <label class="form-label" asp-for="Login">Login</label>
                                <span class="text-danger text-sm-start" asp-validation-for="Login"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <input type="password" asp-for="Password" required class="form-control" />
                                <label class="form-label" asp-for="Password">Password</label>
                                <span class="text-danger text-sm-start" asp-validation-for="Password"></span>
                            </div>

                            <button type="submit" data-mdb-ripple-color="#386f06" class="btn btn-primary btn-block">Sing in</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>